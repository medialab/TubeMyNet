{{! Narratives edition view: }}
<div class="splitlayout-container narrative">
  <div class="splitlayout-top main">
    <div class="container-fluid container-fullheight">
      <div class="row row-fullheight widget-background">
        <div class="col col-lg-4 col-xs-3">
          <button data-app-narratives-action="back" class="btn btn-default btn-sm btn-link back-button"><span class="glyphicon glyphicon-arrow-left"></span> {{t "narratives.back_button" }}</button>
          
        </div>
        <div class="col col-lg-4 col-xs-6 slide-container">
          {{!-- Here comes the slide --}}
        </div>
        <div class="col col-lg-4 col-xs-3">
        </div>
      </div>

    </div>
    <div class="splitlayout-bottom">
      <div class="container-fluid">
        <div class="row views-container narrative-row">
          <div class="col col-xs-2">
            <div class="title-container">
              <input type="text" data-app-narratives-editable="title" class="title inline-editable" value="{{ title }}" />
              <button data-app-narratives-action="share" class="btn btn-link btn-sm">{{t "narratives.share" }}</button>
          
            </div>
          </div>
          <div class="col col-xs-10">
            <div class="views-band-container">
              <ul class="chosen-views-band views-band">
                {{!-- Here comes the chosen snapshots --}}
              </ul>
            </div>
          </div>
        </div>
        <div class="row views-container">
          <div class="col col-xs-2">
            <div class="title-container">
              <p class="title">{{t "narratives.views" }}</p>
            </div>
          </div>
          <div class="col col-xs-10">
            <div class="views-band-container">
              <ul class="unchosen-views-band views-band">
                {{!-- Here comes the unchosen snapshots --}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
