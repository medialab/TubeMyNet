<div class="splitlayout-container">

  <!-- Top Container -->
  <div class="splitlayout-top main">
    <div class="container-fluid container-fullheight">
      <div class="row row-fullheight">
        <div class="col-left col-xs-9" data-app-module="snapshots" data-app-snapshots-panel="sigma">
          <div class="sigma-panel">
            <div class="sigma-expand"></div>
            <div class="sigma-overlay">
              <!-- UNCOMMENT TO USE PROGRESS BARS -->
              <!-- <div class="progress progress-striped active">
