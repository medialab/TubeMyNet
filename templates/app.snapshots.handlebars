        </div>

        <div class="col-right col-xs-3" data-app-module="snapshots" data-app-snapshots-panel="sidebar">

          {{!-- TODO: clear styles attribute below --}}
          <div class="container-networklist" style="padding-top: 0px;">
            <div class="subcontainer-networklist" style="margin-top: 0px;">
              {{!-- Here comes the list of categories --}}
            </div>
          </div>

        </div>
      </div>
    </div>

    <!-- Bottom Container -->
    <div class="splitlayout-bottom">
      <div class="container-fluid">
        <div class="row views-container">
          <div class="col col-xs-10">
            <div class="views-band-container">
              <ul class="views-band">
                {{!-- Here comes the snapshots --}}
              </ul>
            </div>
          </div>
          <div class="col col-xs-2">
            <div class="makeview-button-container">
              <a href="#" class="btn btn-primary" data-app-snapshots-action="snapshot" role="button">Take a view &nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-camera"></span></a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
