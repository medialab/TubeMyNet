{{! Space creation form: }}
<div data-app-modal="bump" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{t "space.bump_graph" }}</h4>
      </div>
      <div class="modal-body">
        {{t "space.bump_graph_description" }}
      </div>

      <div class="modal-footer">
        <div class="form-group">
          <div>
            {{! No }}
            <button id="space-bump-cancel"
                    name="space-bump-cancel"
                    class="btn btn-default">
              {{t "space.bump_cancel" }}
            </button>
            {{! Yes }}
            <button id="space-bump-confirm"
                    name="space-bump-confirm"
                    class="btn btn-primary">
              {{t "space.bump_confirm" }}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
